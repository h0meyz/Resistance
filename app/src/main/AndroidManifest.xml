<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mojo.resistance" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.NoActionBar" >
        <activity
            android:name=".Home_Page"
            android:label="@string/title_activity_Home__Page"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NumberOfPlayerActivity"
            android:label="@string/title_activity_number_of_player"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".PlayerSetupActivity"
            android:label="@string/title_activity_player_setup"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".GamePlayActivity"
            android:label="@string/title_activity_game_play"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Vote_board"
            android:label="@string/title_activity_vote_board"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".View_score"
            android:label="@string/title_activity_view_score"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".GameHelperActivity"
            android:label="@string/title_activity_game_helper"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Vote_result"
            android:label="@string/title_activity_vote_result"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Game_result"
            android:label="@string/title_activity_game_result"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Identity"
            android:label="@string/title_activity_identity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
