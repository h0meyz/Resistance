<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mojo.resistance.PlayerSetupActivity">

    <LinearLayout
        android:id="@+id/ps_top"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        >
        <TextView
            android:id="@+id/numberOfPlayer"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="@string/numPlayerText"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:gravity="center"
            />

        </LinearLayout>
    <LinearLayout
        android:id="@+id/myScroll"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:layout_below="@+id/ps_top"
        android:layout_marginTop="10dp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="450dp"
                android:id="@+id/tableLayout1"
                android:padding="5dp"
                > </TableLayout>
        </ScrollView>
        </LinearLayout>

    <RelativeLayout
        android:id="@+id/ps_bot"
        android:layout_below="@+id/myScroll"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nextButton"
            android:id="@+id/nextToGamePlay"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:onClick="nextToGamePlay"/>
        </RelativeLayout>


</RelativeLayout>
