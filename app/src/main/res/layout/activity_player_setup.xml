<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.mojo.resistance.PlayerSetupActivity">

    <LinearLayout
        android:id="@+id/ps_top"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        >
        <TextView
            android:id="@+id/numberOfPlayer"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/numPlayerText"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:gravity="center">
        </TextView>

    </LinearLayout>

    <ScrollView
        android:id="@+id/myScroll"
        android:layout_weight="14"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout1"
            android:padding="5dp">
        </TableLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/ps_bot"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:padding="5dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/nextButton"
            android:id="@+id/nextToGamePlay"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="nextToGamePlay"/>
    </RelativeLayout>


</LinearLayout>
