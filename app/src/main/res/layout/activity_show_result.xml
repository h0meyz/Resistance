<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mojo.resistance.Show_result">

    <LinearLayout
        android:id="@+id/sr"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">
        <Button
            android:id="@+id/sr_but"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Show Result"
            android:textSize="20sp"
            android:onClick="showit"
            />
    </LinearLayout>
    <TableLayout
        android:background="@drawable/customer_border2"
        android:id="@+id/sr_tb"
        android:layout_below="@+id/sr"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:layout_weight = "3"

        >
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight ="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Fail Count"
                android:layout_weight ="1"/>
            <TextView
                android:id="@+id/sr_f"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"

                android:layout_weight ="1"
                />

        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight ="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Success Count"
                android:layout_weight ="1"/>
            <TextView
                android:id="@+id/sr_s"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"

                android:layout_weight ="1"
                />

        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight ="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Win Team is"
                android:layout_weight ="1"/>
            <TextView
                android:id="@+id/sr_t"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight ="1"
                />

        </TableRow>


    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/sr_bot"
        android:layout_below="@id/sr_tb"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:layout_alignParentRight="true">
        <Button
            android:id="@+id/sr_nr"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Next Round"
            android:textSize="19sp"/>
    </LinearLayout>


</RelativeLayout>
